---
interface Props {
	date: Date;
	class?: string | undefined;
}

const { date, class: className } = Astro.props;
---

<time class:list={[className]} datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-uk', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>

<style>
	time {
		color: inherit;
		font: inherit;
	}
</style>
