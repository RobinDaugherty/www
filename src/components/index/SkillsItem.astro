---
import { Icon } from 'astro-icon/components';

type Props = {
	id: string;
	name: string;
	iconName: string;
	'is:lowerEmphasis'?: boolean;
};

const { id, name, iconName, 'is:lowerEmphasis': lowerEmphasis } = Astro.props;
---

<li data-skill={id} class:list={[lowerEmphasis && 'lower-emphasis']}>
	<Icon name={iconName} />
	<span>{name}</span>
</li>

<style>
	li {
		margin: 0;
		display: flex;
		align-items: center;
		gap: 0.2em;

		&.lower-emphasis {
			opacity: 0.6;
		}

		svg {
			vertical-align: -0.125em;
		}

		&[data-skill='sqlite'] svg {
			/* The feather is just a bit too detailed to see at normal size,
			 * and their design has it taller and ascending over the text.
			 */
			width: 1.2em;
			height: 1.2em;
		}
	}
</style>
